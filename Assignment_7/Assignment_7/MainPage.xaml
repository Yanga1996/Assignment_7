<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment_7.MainPage">


    <StackLayout>
            <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">
               <Label Text="Facebook" HorizontalTextAlignment="Start" TextColor="White" FontSize="40"/>
            </Frame>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                
                
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <BoxView Color="White" />
                <Button Text="Home"
                        
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <BoxView Grid.Column="1"
                      Color="White" />
                <Button Grid.Column="1"
                    Text="Notifications"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <BoxView Grid.Row="1"
                      Color="White" />
                <Button Grid.Row="1"
                    Text="Inbox"     
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <BoxView Grid.Row="1"
                     Grid.Column="1"
                     Color="White" />
                <Button Grid.Row="1"
                    Grid.Column="1"
                    Text="Menu"     
                   HorizontalOptions="Center"
                   VerticalOptions="Center" 
                        />
                <BoxView Grid.Row="2"
                 Grid.ColumnSpan="2"
                 Color="White" />
                <Button Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Text="Posts"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Grid>

       </StackLayout>
           
</ContentPage>
